<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MatchParent dimensions style -->
    <style name="ViewMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent dimensions style -->
    <style name="ViewWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Sectional design style -->
    <style name="ViewSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Sectional design style for height-->
    <style name="ViewColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Style for arrow -->
    <style name="ViewWrapContent.ArrowStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_xsmall</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Style for textView -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>